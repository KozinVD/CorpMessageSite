@page
@model Messendger.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    ViewBag.Title = "Вход";
}
    <main style="height: 100vh;" class="container d-flex flex-column justify-content-center align-items-center">
        <div class="row">
            <h1 class="text-center">Вход в систему</h1>
            <form method="post">
                <label class="form-label">Логин</label>
                <input asp-for="input.Email" class="form-control mb-3" type="email" placeholder="Введите логин">
                <label class="form-label">Пароль</label>
                <input asp-for="input.Password" class="form-control mb-3" placeholder="Введите пароль" type="password">
            <div class="row mt-3 gy-1 justify-content-center">
                    <button class="btn btn-danger col-md-5" type="button" id="regBtn">Регистрация</button>
                    <span class="col-md-1"></span>
                    <input class="btn btn-danger col-md-5" type="submit" value="Войти">
                </div>
            </form>
        </div>
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/scripts/InputScript.js"></script>