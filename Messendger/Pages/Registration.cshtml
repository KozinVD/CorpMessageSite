@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Messendger.Pages.RegistrationModel
@{
    ViewBag.Title = "Регистрация";
}
<main class="flex-grow-1 container d-flex flex-column align-items-center">
        <div class="row">
            <div class="col">
                <h1 class="mt-2 mb-3" style="text-align: center;">Регистрация</h1>
            </div>
        </div>
        <div class="row" style="width: 40%">
        <form method="post" id="formReg">
                    <label for="surname" class="form-label">Фамилия</label>
            <input id="surname" asp-for="input.Surname" class="form-control mb-3" type="text" required>
                    <label for="name" class="form-label">Имя</label>
            <input id="name" asp-for="input.Name" class="form-control mb-3" type="text" required>
                    <label for="lastname" class="form-label">Отчество</label>
            <input id="lastname" asp-for="input.Lastname" class="form-control mb-3" type="text" required>
                    <label for="birthday" class="form-label">Дата рождения</label>
            <input id="birthday" asp-for="input.Birthday" class="form-control mb-3" type="date" required>
                    <div class="d-flex align-items-center">
                        <label for="speciality" class="form-label">Ваша специальность</label>
                        <button class="btn bg-light bg-gradient mb-1 ms-1 btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                    </div>
            <select class="form-select mb-3" asp-for="input.IdJob" id="speciality" required>
                        <option value="" disabled>-- Выберите профессию --</option>
                        @foreach (var item in Model.db.Jobs)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
            <div class="invalid-feedback">
                Пожалуйста, выберите корректную профессию.
            </div>
                    <label for="login" class="form-label">Почта</label>
            <input id="login" asp-for="input.Login"  class="form-control mb-3" type="email" required>
                    <label for="password" class="form-label">Пароль</label>
            <input id="password" asp-for="input.Password" onkeyup="checkPass(this)" class="form-control mb-3" type="password" required>
            <ul class="list-group list-group-flush" id="errorlist">
                
            </ul>
                    <label for="reppassword" class="form-label">Повторите пароль</label>
            <input id="reppassword" class="form-control mb-3" type="password" required>
            <div class="d-flex justify-content-center gap-3 mb-5">
                <button class="btn btn-danger" style="width: 40%" id="inputBtn" type="button">Войти</button>
                <input class="btn btn-danger" style="width: 40%" type="submit" value="Зарегистрироваться">
            </div>

                </form>
        </div>
    </main>
    <div class="modal fade text-black" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Добавить специальность</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <form method="post">
                <div class="modal-body">
                        <label class="form-label">Название</label>
                        <input class="form-control" asp-for="@Model.NameJob" type="text" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <button type="submit" asp-page-handler="AddSpecialty" class="btn btn-primary">Сохранить изменения</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/bootstrap/js/bootstrap.js" asp-append-version="true"></script>
<script src="~/scripts/RegScript.js" asp-append-version="true"></script>
    